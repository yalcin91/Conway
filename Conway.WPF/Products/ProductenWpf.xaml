<Window x:Class="Conway.WPF.Products.ProductenWpf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conway.WPF.Products"
        mc:Ignorable="d"
        Title="Producten - Standard Chrome"
        Topmost="True"
        Width="1890" Height="1000"
        WindowStyle="SingleBorderWindow"  WindowState="Maximized">

    <ScrollViewer x:Name="PART_ContentHost" CanContentScroll="True" BorderThickness="0"
                  IsTabStop="False" Margin="2" HorizontalScrollBarVisibility="Visible" VerticalAlignment="Stretch" Background="{x:Null}">
        <Grid>
            <Grid.Background>
                <LinearGradientBrush   
                            StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF5FA7F0" Offset="0"/>
                    <GradientStop Color="#FFC7ECD1" Offset="0.5"/>
                    <GradientStop Color="#FFC4DFFF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
    </ScrollViewer>
</Window>
